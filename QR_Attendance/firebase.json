{
    "hosting": {
        "public": "static",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "app"
            }
        ]
    },
    "functions": {
        "source": ".",
        "codebase": "default",
        "ignore": [
            ".git",
            ".gitignore",
            "__pycache__",
            "venv",
            "env",
            "*.pyc"
        ]
    }
}